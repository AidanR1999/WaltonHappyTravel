@model IEnumerable<Walton_Happy_Travel.Models.Hotel>

@{
    ViewData["Title"] = "All Hotels";
}

<h2>Hotels</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                
            <th>
                @Html.DisplayNameFor(model => model.AccomodationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccomodationAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayName("Staff Assigned")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccomodationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccomodationAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffAssigned.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
                Stars
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AccomodationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AccomodationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AccomodationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
