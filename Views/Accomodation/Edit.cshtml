@model Walton_Happy_Travel.Models.Accomodation

@{
    ViewData["Title"] = "Edit " + ViewData["Type"].ToString();
}

<h2>Edit @Model.AccomodationName</h2>

<h4>@ViewData["Type"].ToString()</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-type="ViewData["Type"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccomodationId" />
            <div class="form-group">
                <label asp-for="AccomodationName" class="control-label"></label>
                <input asp-for="AccomodationName" class="form-control" />
                <span asp-validation-for="AccomodationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccomodationAddress" class="control-label"></label>
                <input asp-for="AccomodationAddress" class="form-control" />
                <span asp-validation-for="AccomodationAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Assign To</label>
                @Html.DropDownList("Staff", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StaffAssigned.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

