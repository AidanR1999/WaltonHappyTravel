@model Walton_Happy_Travel.Models.Brochure

@{
    ViewData["Title"] = @Model.Accomodation.AccomodationName;
}
<br/>
<div class="row">
    <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="my-0 font-weight-normal">
                                <label style="font-size:23px;color:steelblue;"><b>@Model.Duration days </b> at @Model.Accomodation.AccomodationName, @Model.Accomodation.Country.CountryName</label>
                            </h4>
                            <h4 class="my-0 font-weight-normal">
                                <label class="fas fa-map-marker-alt" style="font-size:12px;color:grey;">@Model.Accomodation.AccomodationAddress</label>
                            </h4>
                        </div>
                        <img class="card-img-top" style="height:100%;" src="@Model.ImageLink" alt="Card Image" />
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <label style="font-size:20px; color:#a51313"><b>Â£@Model.PricePerPerson</b> per/person</label>
                                </div>
                                @Html.ActionLink(" Book", "CheckDate", "Booking", new { brochureId = @Model.BrochureId }, new { @class = "btn pull-right btn-outline-info fas fa-plane-departure"})
                                <label style="font-size:20px; color:#a51313"><b>@Model.Category.CategoryName</b></label>
                            </div>
                            <div>
                                    <p>@Model.Description</p>
                                    <p>@Model.Accomodation.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
</div>
