@model Walton_Happy_Travel.Models.StaffReportsViewModel

@{
    ViewData["Title"] = "Generate Staff Report";
}

@using(Html.BeginForm("Reports"))
{
    <div class="form-group">
        <label>Generate a report:</label>
        <select asp-for="Report" asp-items="ViewBag.Reports"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
}