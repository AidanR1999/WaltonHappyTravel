@using Newtonsoft.Json;
@model Walton_Happy_Travel.Models.ChangeDateViewModel

@{
    ViewData["Title"] = "Availability";
}

<br/>
@using (Html.BeginForm("ChangeDate", "Booking", FormMethod.Post))
{
    @Html.HiddenFor(m => m.BookingId)

    if(Model.ErrorMessage.Length > 1)
    {
        <p class="text-danger">@Model.ErrorMessage</p>
    }

    <label class="control-label">Departure Date</label>
    @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @id = "datepicker", @class = "control-form", @Name = "inputDate", @PlaceHolder = "mm/dd/yyyy" } })

    <div class="form-group">
        <input type="submit" value="Check Date" name="Check Date" class="btn btn-primary" />
    </div>
}

@section Scripts
{
    <script>
          $( function() {
                $( "#datepicker" ).datepicker({
                    minDate: +1,
                    dateFormat: "dd/mm/yy"
                });
            } );
  </script>
}