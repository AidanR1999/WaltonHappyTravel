@model Walton_Happy_Travel.Models.BookingInvoiceViewModel

<h1>Invoice</h1>
<hr>
 <table style="width:100%">
  <tr>
    <tr>
        <th>Booking Reference</th>
        <td>@Model.BookingId</td>
    </tr>
    <tr>
        <th>Accomomdation</th>
        <td>@Model.AccomodationName</td>
    </tr>
    <tr>
        <th>Country</th>
        <td>@Model.CountryName</td>
    </tr>
    <tr>
        <th>Departure Date</th>
        <td>@Model.DepartureDate</td>
    </tr>
    <tr>
        <th>Duration</th>
        <td>@Model.Duration Days</td>
    </tr>
    <tr>
        <th>Catering</th>
        <td>@Model.Catering</td>
    </tr>
    <tr>
        <th>Total Price</th>
        <td>£@Model.TotalPrice</td>
    </tr>
    <tr>
        <th>Amount Paid</th>
        <td>£@Model.AmountPaid</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@Model.BookingStatus</td>
    </tr>
  </tr>
</table>

<hr>
@{  int i = 1;   
    
    <table style="width:100%">
    <tr>
        <tr>
            <th>People</th>
            <th>First Name</th>
            <th>Middle Name(s)</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
        </tr>
        @foreach (var person in Model.Persons)
        {
            <tr>
                <th>Person #@i</th>
                <td>@person.Forename</td>
                <td>@person.MiddleNames</td>
                <td>@person.Surname</td>
                <td>@person.DateOfBirth</td>
                @{i++;}
            </tr>
        }
        
    </tr>
    </table>
}